{
  "expo": {
    "name": "QRゲスト管理",
    "description": "QRコードを使って会員管理や出欠管理をするためのアプリです。",
    "slug": "qr-attendance-manager",
    "privacy": "public",
    "sdkVersion": "35.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.8",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#00c2ad"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "qr.attendance.manager.nodokayamamoto.com",
      "infoPlist": {
        "NSCameraUsageDescription": "QRコードを読み取るためにカメラを使用します"
      }
    },
    "android": {
      "package": "qr.attendance.manager.nodokayamamoto.com",
      "adaptiveIcon": {
        "backgroundColor": "#00c2ad",
        "foregroundImage": "./assets/adaptiveicon.png"
      },
      "versionCode": 2,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "notification": {
      "icon": "./assets/notificationicon.png",
      "color": "#00c2ad"
    },
    "primaryColor": "#00c2ad"
  }
}
